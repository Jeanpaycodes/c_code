//生成关机程序
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main()
{
    char input[20] = {0};
    system("shutdown -s -t 60");
again:
    printf("请注意：你的电脑将在1分钟后关机，输入：我是猪，取消关机\n请输入>：");
    scanf("%s",input);
    if(strcmp(input,"我是猪")==0)
    {
        system("shutdown -a");
    }
    else
    {
        goto again;
    }
    return 0;
}
